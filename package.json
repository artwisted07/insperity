{
  "name": "starter-proj",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "build:vendor": "browserify -r jquery -p [ minifyify --no-map ] > public/js/vendor.bundle.js",
    "build:app": "browserify -x jquery -t babelify -p [ minifyify --no-map ] src/app.js > public/js/app.bundle.js",
    "build": "npm run build:vendor && npm run build:app",
    "build:css": "node-sass --include-path scss src/scss/styles.scss public/css/styles.css",
    "watch:css": "node-sass -w src/scss/ -o public/css/",
    "watch:app": "watchify src/app.js -x jquery -t babelify -o public/js/app.bundle.js",
    "serve": "concurrently \"npm run watch:css\" \"npm run watch:app\" \"lite-server\""
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "babel-core": "^6.14.0",
    "babel-preset-es2015": "^6.14.0",
    "babelify": "^7.3.0",
    "browserify": "^13.1.0",
    "concurrently": "^2.2.0",
    "jquery": "^3.1.0",
    "lite-server": "^2.2.2",
    "minify": "^2.0.11",
    "minifyify": "^7.3.3",
    "node-sass": "^3.9.3",
    "watchify": "^3.7.0"
  },
  "dependencies": {}
}
